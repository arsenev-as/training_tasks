<?php
// комментарий после этих символов. 

// ТИПЫ ПЕРЕМЕННЫХ

$a = 100; // целое число - integer, int
$b = 14.12; // дробь - float
$c = 'Howdy Ho!'; // строка - string, str
$d = "Howdy Ho!"; // строка - string, str

echo $a ;// выведет на экран значение переменной А - 100

$e = array(1,2,3,4,5,6); // массив, array 

echo $e; // ругнется и скажет, что это массив, уточни, что именно из него хочешь вывести
echo '<br/>'; // перенос строки. Возможно как-то можно делать без отдельной строки. Уточнить.
echo $e[0]; // выведет из массива значение на позиции 0 
// (в данном случае 1)
// В массиве нумерация начинается с нуля
echo '<br/>';
$f = array(
    'Jonny', // индекс № 0
    'Flame', // индекс № 1
    'Abraham', // индекс № 2
    'Walker', // индекс № 3
); 
// массив из строк

echo $f[1] // выведет на экран Flame 


// ниже ассоциативный массив. Вместо порядковых индексов присваиваются ассоциации
$g = array(
    'name' => 'Ray', // индекс name
    'surname' => 'Tugalov', // индекс surname
    'age' => 20, // индекс age
    'byer' => 1996 // byer
); 
echo $g ['surname']; // выдаст Tugalov

// ниже многомерный ассоциативный массив. В одной из ячеек тоже массив.
$f = array(
    'name' => 'Ray', // индекс name
    'surname' => 'Tugalov', // индекс surname
    'age' => 20, // индекс age
    'byer' => 1996, // byer
    'education' => array('scool in 2003','cooege in 2013')
    ,
    // массив 2-го уровня из 2-х элементов
    'married' = > false, // Буллево значение true или false. По сути заполнили профиль человека
    'smoking' = > false,
    'geek' => true
);
 
echo $f ['education'][0];// выведет 0-ой элемент массива 2-го порядка. 'scool in 2003'


$j = false; // буллев тип, boolean, bool
?>


</body>
</html>
