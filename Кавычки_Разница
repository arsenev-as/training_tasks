<?php

// Разница между одинарными и двойными кавычками: ' ' и " "
$a = 100;


echo 'test; $a<br>'; // здесь выдаст как текст - $a
echo "test; $a"; // здесь выдаст значение переменной - 100

// для экономии производительности кроме особых случаев пишут одинарные кавычки ' '



?>


